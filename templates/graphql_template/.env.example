# GraphQL API Template Environment Variables
# Copy this file to .env.local for local development

# Server Configuration
SERVER_PORT=8000
HOST=0.0.0.0
RELOAD=false
WORKERS=1

# Security Keys (replace with actual keys in production)
E_PRIVATE_KEY=your_private_key_here
E_PRIVATE_PASSWORD=your_private_password_here
E_PUBLIC_KEY=your_public_key_here

# Database Configuration (uncomment if using database)
# POSTGRES_DB=graphql_db
# POSTGRES_USER=graphql_user
# POSTGRES_PASSWORD=graphql_password
# DATABASE_URL=postgresql://graphql_user:graphql_password@postgres:5432/graphql_db

# Redis Configuration (uncomment if using Redis)
# REDIS_URL=redis://redis:6379/0

# Logging
LOG_LEVEL=info

# API Configuration
API_TITLE=GraphQL API Template
API_VERSION=1.0.0
API_DESCRIPTION=A template for building GraphQL APIs with FastAPI and Strawberry

# GraphQL Configuration
GRAPHQL_ENDPOINT=/graphql
GRAPHIQL_ENABLED=true
INTROSPECTION_ENABLED=true