{
    "defaults":{
        "general_data_path":"src/core_specs/data/general_data.json"
    },
    
    "logging":{
        "logging_level":"debug",
        "dir_name":"logs",
        "log_file_name":"graphql_api"
    },
    
    "email_validation":{
        "allowed_providers":["gmail","outlook","yahoo","hotmail","icloud","protonmail","aol","zoho","gmx","mail"],
        "allowed_tlds":["com", "org", "net", "co", "io", "edu", "gov"]
    },

    "network":{
        "uvicorn_app_reference": "main:app",
        "server_port":8000,
        "host": "0.0.0.0",
        "reload": false,
        "workers": 1,
        "proxy_headers": true
    },

    "graphql": {
        "endpoint": "/graphql",
        "graphiql": true,
        "introspection": true,
        "request_limit": 50,
        "unit_of_time_for_limit": "m",
        "query_depth_limit": 10,
        "query_complexity_limit": 1000
    },

    "endpoints": {
        "health_check": {
            "request_limit": 100,
            "unit_of_time_for_limit": "m",
            "endpoint_route": "/health"
        }
    }
}